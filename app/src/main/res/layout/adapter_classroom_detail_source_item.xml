<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/qmui_s_list_item_bg_with_border_none"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="5dp">

        <ImageView
            android:id="@+id/classroom_iv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/classroom_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:textColor="@color/qmui_config_color_75_pure_black"
            android:textSize="16sp" />

        <RelativeLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/action_open"
                android:layout_width="30dp"
                android:layout_height="30dp"
                tools:ignore="ContentDescription" />

            <com.qmuiteam.qmui.widget.QMUIProgressBar
                android:id="@+id/action_download"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:textColor="@color/app_color_blue"
                android:textSize="14sp"
                app:qmui_background_color="?attr/qmui_config_color_gray_8"
                app:qmui_progress_color="@color/app_color_blue"
                app:qmui_stroke_width="4dp"
                app:qmui_type="type_circle" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/action_collection"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:visibility="gone"
            tools:ignore="ContentDescription" />

    </LinearLayout>

</android.support.v7.widget.CardView>
